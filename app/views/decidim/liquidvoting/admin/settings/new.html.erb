<h2 class="card-title process-title-summary">
  <%= t ".title" %>
</h2>

<%= form_for @setting, url: { action: "create" }, html: { class: "form new_setting" } do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t ".form.title" %></h2>
    </div>

    <div class="card-section">
      <div class="row column">
        <%= f.select :decidim_consultation_id,
                     options_from_collection_for_select(
                       consultations_for_select,
                       :id,
                       :translated_title
                     ) %>
      </div>

      <div class="row column">
        <%= f.number_field :max_grants, min: 1, autofocus: true %>
      </div>

      <div class="row column">
        <%= f.date_field :expires_at, min: Date.today %>
      </div>
    </div>
  </div>

  <div class="button--double form-general-submit">
    <%= f.submit t(".save") %>
  </div>
<% end %>
